        <h3>If you could only eat one fruit for the rest of your life, which fruit would you pick?</h3>
        @foreach (var fruit in Model.Fruits)
        {
            <input type="radio" asp-for="Fruit" value="@fruit.Value">
            <label asp-for="Fruit">@fruit.Key</label><br>
        }
