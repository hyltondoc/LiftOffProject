            <label for="hate">I HATE Chocolate!</label>*@

        <br>
        <h3>It’s happy hour!!! Which of these four cocktails are you drinking from 4 – 7?!</h3>
        @foreach (var cocktail in Model.Cocktails)
        {
            <input type="radio" asp-for="Cocktail" value="@cocktail.Value">
            <label asp-for="Cocktail">@cocktail.Key</label><br>
