        <br>

        <h3>You’ve been given two free tickets to ANYWHERE in the world!! Where are you going on vacation?!</h3>
        @foreach (var vacation in Model.Vacations)
        {
            <input type="radio" asp-for="Vacation" value="@vacation.Value">
            <label asp-for="Vacation">@vacation.Key</label><br>
        }

