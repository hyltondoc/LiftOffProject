<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2 style="color:#74FFFF">Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label style="color:white" for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label style="color:white" for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @if (ViewBag.wines != null)
    {
        <table>
            @foreach (var wine in ViewBag.wines)
            {
                <tr>
                    <td>
                        <p style="color:white" >ID: @wine.WineId</p>
                        <p style="color:white" >Name: @wine.Name</p>
                        <p style="color:white" >Category: @wine.WineCategoryName</p>
                        <p style="color:white" >Notes: @wine.NotesText</p>
                    </td>
                </tr>
            }
        </table>
    }


</div>
