@model LiftOffProject.Models.Notes

<h1 style="color:#74FFFF">Add New Wine Note</h1>

<form asp-controller="Notes" asp-action="Add" method="post">
    <div class="form-group">
        <label style="color:white" asp-for="Name">Note</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label style="color:white" asp-for="Description">Note Description</label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <input type="submit" value="Submit" />
</form>