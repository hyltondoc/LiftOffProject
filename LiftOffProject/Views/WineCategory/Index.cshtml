@model List<LiftOffProject.Models.WineCategory>

<h1 style="color:#74FFFF">Wine Category Currently in the Database</h1>
<p><a style="color:white" asp-controller="WineCategory" asp-action="Add">Add a Wine Category</a></p>


@if (Model.Count == 0)
{
    <p style="color:white">No Wine Categeories are currently in the database!</p>
}
else
{
    <div>
        <ul>
            @foreach (WineCategory category in Model)
            {
                <li>
                    <a style="color:white" asp-controller="WineCategory" asp-action="About" asp-route-id="@category.Id">@category.Name</a>
                </li>
            }
        </ul>
    </div>
}