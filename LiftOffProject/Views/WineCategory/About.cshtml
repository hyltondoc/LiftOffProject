@model List<LiftOffProject.Models.WineCategory>

@if (Model.Count == 0)
{
    <h1 style="color:white">No Wine Categories Listed</h1>
}
else
{
      <h1 style="color:#74FFFF">Wine Category Description</h1>

    <ul>
        @foreach (var category in Model)
        {
            <li style="color:white">Category: @category.Name , Flavors: @category.Flavors</li>
            
        }
    </ul>

}