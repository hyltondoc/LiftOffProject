@using LiftOffProject.ViewModels;
@model AddWineCategoryViewModel;

<h1>Add New Wine Category</h1>

<form asp-controller="WineCategory" asp-action="ProcessAddWineCategoryForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Wine Category Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Flavors">Wine Flavors</label>
        <input asp-for="Flavors" />
         <span asp-validation-for="Flavors"></span>
    </div>
    <input type="submit" value="Submit" />
</form>
