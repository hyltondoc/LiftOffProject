<div class="container body-content">
    <h1>@ViewBag.title</h1>
    <h2 style="color:white" class="centered; text-center">View Wines By Category</h2>
</div>
<br /><br />


<table class="centeredTable">
    <tr>
        @foreach (var column in ViewBag.columns)
        {
            @if (column.Key != "all")
            {
                <th style="color:white" class="text-center">@column.Value</th>
            }
        }
    </tr>


    <tr>
        @foreach (var category in ViewBag.tableChoices)
        {
            <td>
                <ul>
                    @if (category == "category")
                    {
                        @foreach (var item in ViewBag.winecategories)
                        {
                            <li>
                                <a style="color:#74FFFF" asp-controller="List" asp-action="Wine" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                            </li>
                        }
                    }
                    else
                    {
                        @foreach (var item in ViewBag.notes)
                        {
                            <li>
                                <a style="color:#74FFFF" asp-controller="List" asp-action="Wine" asp-route-column="@category" asp-route-value="@item.Name">@item.Name : @item.Description</a>
                            </li>
                        }
                    }

                </ul>
            </td>
        }
    </tr>
</table>
<br /><br />
<br /><br />
    <table class="table table-striped">
        <tr>
            <th style="color:white">Wine Name</th>
            @*<th>Flavor</th>*@
        </tr>
        @foreach (var wine in ViewBag.wines)
        {
            <tr>
                <td><a style="color:#74FFFF" asp-controller="Home" asp-action="Detail" asp-route-id="@wine.Id">@wine.Name</a></td>
                @*<td>@wine.Category</td>@* category.name doesn't return an object. Investigate or remove*@
            </tr>
        }
    </table>

