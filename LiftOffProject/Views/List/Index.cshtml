<div class="container body-content">
    <h1>@ViewBag.title</h1>
    <h2 class="centered">View Wines By Category</h2>
</div>

<table class="centeredTable">
    <tr>
        @foreach (var column in ViewBag.columns)
        {
            @if (column.Key != "all")
            {
                <th>@column.Value</th>
            }
        }
    </tr>
    <tr>
        @foreach (var category in ViewBag.tableChoices)
        {
            <td>
                <ul>
                    @if (category == "winecategory")
                    {
                        @foreach (var item in ViewBag.winecategory)
                        {
                            <li>
                                <a asp-controller="List" asp-action="Wine" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                            </li>
                        }
                    }
                    else
                    {
                        @foreach (var item in ViewBag.notes)
                        {
                            <li>
                                <a asp-controller="List" asp-action="Wine" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                            </li>
                        }
                    }

                </ul>
            </td>
        }
    </tr>
</table>

<h2>Delete a Wine</h2>

<form method="post">
    @foreach (var wine in ViewBag.wines)
    {
        <div class="form-group">
            <label>
                <span>@wine.Id</span>
                <input type="checkbox" name="wineIds" value="@wine.Id" class="form-control">
            </label>
        </div>
    }

</form>

<input type="submit" value="Delete Selected Winess" class="btn btn-danger">




